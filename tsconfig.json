{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES6",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "outDir": "dist/",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/__snapshots__"
  ]
}
