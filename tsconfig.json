{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"lib": ["ESNext", "DOM"],
		"jsx": "react",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"esModuleInterop": true,
		"importHelpers": true,
		"outDir": "dist/",
		"types": ["react", "jest"]
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.tsx",
		"**/*.test.ts",
		"**/__snapshots__"
	]
}
